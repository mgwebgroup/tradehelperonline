<div class="chart-window-wrapper">
    <div class="d-flex">
        <h4 class="mr-1 text-center text-body bg-light">{{symbol}}</h4>
        <ul class="list-group list-group-horizontal mb-2">
            <li class="p-1"><small>Open: {{ include('formatters/math.twig', { value: p_data.open, prefix: '$' }) }}</small></li>
            <li class="p-1"><small>High: {{ include('formatters/math.twig', { value: p_data.high, prefix: '$' }) }}</small></li>
            <li class="p-1"><small>Low: {{ include('formatters/math.twig', { value: p_data.low, prefix: '$' }) }}</small></li>
            <li class="p-1"><small>Close: {{ include('formatters/math.twig', { value: p_data.close, prefix: '$' }) }}</small></li>
            <li class="p-1"><small>Volume: {{ include('formatters/math.twig', { value: p_data.volume, decimal_points: 0 }) }}</small></li>
        </ul>
    </div>
    <div><img src="{{ asset(chart_path) }}"></div>
</div>